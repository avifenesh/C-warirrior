{
  "name": "code-warrior-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run build:wasm && vite build",
    "build:web": "npm run build:wasm && vite build",
    "build:wasm": "cd ../src-wasm && wasm-pack build --target web --release && mkdir -p ../src-ui/src/lib/wasm && cp -r pkg/* ../src-ui/src/lib/wasm/",
    "build:tauri": "TAURI_PLATFORM=1 vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
    "@tauri-apps/api": "^2.0.0",
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.0",
    "canvas": "^3.2.0",
    "postcss": "^8.4.0",
    "sharp": "^0.34.5",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-wasm": "^3.3.0",
    "vite-plugin-top-level-await": "^1.4.1"
  }
}
